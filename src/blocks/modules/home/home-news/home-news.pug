include ../../news/news-card/news-card.pug

mixin home-news
  section.section-home-news
    .container
      .home-news
        .home-news__list
          .swiper-container(data-swiper="homenews")
            .swiper-wrapper
              each item in app.news 
                .swiper-slide
                  .home-news__item: +news-card(item)
          .swiper-nav
            .swiper-nav__prev(data-swiper-prev="homenews"): +icons('#ic_swiper-prev', 17)
            .swiper-nav__next(data-swiper-next="homenews"): +icons('#ic_swiper-next', 17)

